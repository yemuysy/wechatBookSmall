page {
  height: 100%;
}

.container {
  background: #f4f4f4;
  width: 100%;
  height: auto;
  min-height: 100%;
  overflow: hidden;
}

/** 没有商品样式*/

.no-goods-title-box {
  width: 100%;
  padding-top: 330rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat center 205rpx;
  background-size: 100rpx auto;
  margin-bottom: 50rpx;
}

.no-goods-to-index-btn {
  color: #fff;
  background: #4d90fe;
  border-radius: 6px;
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
}

/* 有商品样式 */

.goods-list {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 70rpx;
}

.goods {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: white;
  justify-content: flex-start;
}

.top-list {
  width: 100%;
  margin: 10rpx 0rpx;
}

.edit-btn {
  margin-right: 10rpx;
  float: right;
  color: #999;
  height: 100%;
}
.disabledTap {
background: #999;
pointer-events: none;
}

.goods-icon {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-img {
  height: 200rpx;
  width: 200rpx;
  /* background: black; */
  display: flex;
  align-items: center;
}

.goods-img image {
  height: 180rpx;
  width: 180rpx;
}

.info {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.num-box {
  display: flex;
}

.num-jian, .num-input, .num-jia {
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}

.num-input {
  font-size: 28rpx;
}

.num-input input {
  height: 100%;
}

.hui {
  background-color: #f5f5f9;
}

.operation {
  display: flex;
  flex-direction: row-reverse;
  flex: 1;
}

.separate {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
}

.cart-bottom {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  background: white;
}

.cart-icon {
  margin: 18rpx 20rpx;
  float: left;
}

.checkAll {
  line-height: 100rpx;
  font-size: 28rpx;
}

.cart-pay {
  width: 240rpx;
  height: 100%;
  background: #405f80;
  float: right;
}

.cart_pay {
  display: block;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
}

.cart_edit {
  background: red;
  display: block;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
}

.cart-sum {
  width: 300rpx;
  height: 100%;
  line-height: 100rpx;
  /* background: red; */
  float: right;
  text-align: center;
}

.sum_color {
  color: red;
  font-size: 25rpx;
}

.sum_text {
  font-size: 30rpx;
}
